@import 'nib/buttons'

body
  background-image url('../images/bg.gif')
  font-family 'Gill Sans', 'Gill Sans MT', Sans-Serif
.container
  width 400px
  margin 0px auto
h1
  margin-bottom 12px
  text-align center
  font-size 40px
  padding-bottom 8px
  border-bottom 2px solid
form
  padding-bottom 15px
input
  display block
  float left
  padding 8px
  font-size 16px
#url
  width 280px
  margin-right 12px
#submit
  font-size 20px
  minimal-button(#7fbf4d, text: darken(#7fbf4d, 75%), text-shadow: rgba(white, 0.75))
  margin-top 6px
.clear
  height 1px
  width 400px
  clear both
.result
  clear both
  width 400px
  margin-top 12px
  border-top 12px solid #ff4b33
  padding-top 12px
  text-align center
.result a
  font-size 24px
  display block
  margin-top 8px
  color #ff2d11
  background #ffd2cc
  padding 8px